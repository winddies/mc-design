{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "lib",
    "emitDeclarationOnly": true,
    "outDir": "lib",
    "baseUrl": "./",
    "jsx": "react-jsx",
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
        "options": {
          "customMatcher": "\\.(c|le||lle|sa|sc)ss$"
        }
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*", "./types"],
  "exclude": ["lib", "node_modules", "packages"]
  // "references": [{ "path": "./tsconfig.node.json" }]
}
